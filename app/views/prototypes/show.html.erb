<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__heading">
        <%= @prototype.title %>
      </p>
      <% if @user_owns_prototype %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@prototype), class: 'prototype__btn' %>
          <%= link_to "削除する", prototype_path(@prototype), method: :delete, data: { confirm: 'Are you sure?' }, class: 'prototype__btn' %>
        </div>
      <% end %>

      <div class="prototype__image">
        <%= image_tag(@prototype.image) if @prototype.image.attached? %>
      </div>

      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototype.concept %>
          </p>
        </div>
      </div>

      <% if user_signed_in? %>
        <div class="prototype__comments">
          <%= form_for([@prototype, @comment], local: true) do |form| %>
            <div class="field">
              <%= form.label :content, "コメント" %><br />
              <%= form.text_area :content, id: "comment_content" %>
            </div>
            <div class="actions">
              <%= form.submit "送信する", class: 'form__btn' %>
            </div>
          <% end %>
        </div>
      <% end %>

      <ul class="comments_lists">
        <% @comments.each do |comment| %>
          <li class="comments_list">
            <%= comment.content %>
            <%= link_to comment.user.name, user_path(comment.user), class: :comment_user %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</main>